<div>
    <a class="btn accordion-toggle" data-toggle="collapse" href="#datasets-list-filter">
        Filter <span class="caret"></span>
    </a>

    <div id="datasets-list-filter" class="collapse">
        <div class="well">
            <ul class="nav nav-pills">
                <li>
                    <label>Name</label>
                    <input type="text" class="filter-name">
                </li>
                <li>&nbsp;</li>
                <li>
                    <label>Source</label>
                    <input type="text" class="filter-source">
                </li>
                <li>&nbsp;</li>
                <li>
                    <label>Visibility</label>
                    <select class="filter-visibility span2">
                        <option data-id="visibility-any">Any</option>
                        <option data-id="visibility-public">Public</option>
                        <option data-id="visibility-shared">Shared</option>
                        <option data-id="visibility-private">Private</option>
                    </select>
                </li>
            </ul>
            <div>
                <label>Updated</label>
                <select class="filter-updated-on">
                    <option data-id="filter-updated-on-before">On or before</option>
                    <option data-id="filter-updated-on-before">On or after</option>
                </select>
                <input type="text" class="filter-updated-dt" placeholder="mm/dd/yyyy">
            </div>
            <a href="#" onclick="return false;" class="btn btn-mini filter-data-sets">Filter Data Sets</a>
        </div>
    </div>
</div>
<ul class="nav nav-pills">
    <li><a href="#" onclick="return false;" class="btn btn-mini disabled">Explore Selected Data</a></li>
    <li>&nbsp;</li>
    <li><a href="#" onclick="return false;" class="btn btn-mini">Upload Your Data</a></li>
    <li>&nbsp;</li>
    <li><a href="#" onclick="return false;" target="_blank">About Uploading Data</a></li>
</ul>
<table class="table table-striped table-bordered">
    <thead>
    <tr>
        <th><input type="checkbox" class="select-all-datasets"/></th>
        <th>Name</th>
        <th>Source</th>
        <th>Visibility</th>
        <th>Updated</th>
        <th>Actions</th>
    </tr>
    </thead>
    <tbody>
    {{#each modelspecs}}
        <tr>
            <td><input type="checkbox" class="select-item-dataset"/></td>
            <td>{{label}}</td>
            <td>
                {{#if source}}
                    <a href="{{source.url}}" target="_blank">{{source.id}}</a>
                {{/if}}
            </td>
            <td>Public</td>
            <td>{{lastUpdated}}</td>
            <td>&nbsp;</td>
        </tr>
    {{/each}}
    </tbody>
</table>